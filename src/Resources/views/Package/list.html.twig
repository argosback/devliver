{% extends '@Devliver/layout.html.twig' %}

{% block pageTitle %}
    <i class="fas fa-cube fa-fw"></i> {{ 'package.list.page_header'|trans }}
{% endblock %}

{% block pageActions %}
    <a class="btn btn-outline-primary" href="{{ path('devliver_repo_update_all') }}"><span class="fa fa-sync fa-fw"></span> {{ 'action.update_all'|trans }}</a>
{% endblock %}

{% block content %}
    <div class="row mb-3">
        <div class="col-md-8">
            {{ knp_pagination_render(pagination) }}
        </div>
        <div class="col-md-4">
            <form method="get">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupPrepend"><i class="fa fa-search"></i></span>
                    </div>
                    <input type="text" name="filter" value="{{ app.request.query.get('filter') }}" class="form-control" placeholder="Filter">
                    <div class="input-group-append">
                        <button class="btn btn-outline-primary" type="submit">Search</button>
                        <a href="{{ path(app.request.get('_route')) }}" class="btn btn-outline-danger">Reset</a>
                    </div>

                </div>
            </form>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Packages <span class="badge badge-primary">{{ pagination.getTotalItemCount }}</span>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped table-hover mb-0">

                        <tr>
                            <th>{{ knp_pagination_sortable(pagination, '#', ['p.id']) }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Name', ['p.name']) }}</th>
                            <th>Last Version</th>
                            <th>Datum</th>
                            <th>Last Update</th>
                            <th></th>
                            <th></th>
                        </tr>
                        {% for package in pagination %}
                            <tr>
                                <td style="white-space: nowrap; width: 1px;">{{ package.id }}</td>
                                <td>
                                    <a href="{{ path('devliver_package_view', {package: package.id}) }}">
                                        {{ package.name }}
                                    </a><br>
                                    {{ package.lastStablePackage.description }}
                                </td>
                                <td>
                                    {{ package.lastStablePackage.prettyVersion }}
                                </td>
                                <td>
                                    {{ package.lastStablePackage.releaseDate|date }}
                                </td>
                                <td>
                                    {{ package.lastUpdate|date }}
                                </td>
                                <td>
                                    <span class="badge badge-primary">{{ package_downloads(package)|number_format }} Downloads</span>
                                    {% if package.autoUpdate %}
                                        <span class="badge badge-success">Auto Update</span>
                                    {% else %}
                                        <span class="badge badge-danger">No Auto Update</span>
                                    {% endif %}
                                </td>
                                <td style="white-space: nowrap; width: 1px;">
                                    <div class="btn-group">
                                        <a href="{{ path('devliver_package_update', { package: package.id, referer: true }) }}" data-toggle="tooltip" title="{{ 'action.update'|trans }}" class="btn btn-xs btn-outline-info"><span class="fa fa-sync fa-fw"></span></a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {{ knp_pagination_render(pagination) }}
        </div>
        <div class="col-md-6 text-right">
            {{ block('pageActionsGroup') }}
        </div>
    </div>
{% endblock %}
