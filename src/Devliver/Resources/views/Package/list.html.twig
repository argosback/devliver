{% extends '@Devliver/layout.html.twig' %}

{% block pageTitle %}
    <i class="fas fa-cube fa-fw"></i> {{ 'package.list.page_header'|trans }}
{% endblock %}

{% block pageActions %}
    <a class="btn btn-outline-primary" href="{{ path('devliver_repo_update_all') }}"><span class="fa fa-sync fa-fw"></span> {{ 'action.update_all'|trans }}</a>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-6">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Packages <span class="badge badge-primary">{{ pagination.getTotalItemCount }}</span>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped table-hover mb-0">

                        <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Downloads</th>
                            <th></th>
                        </tr>
                        </thead>
                        {% for package in pagination %}
                            <tr>
                                <td style="white-space: nowrap; width: 1px;">{{ package.id }}</td>
                                <td>
                                    <a href="{{ path('devliver_package_view', {package: package.id}) }}">
                                        {{ package.name }}
                                    </a>
                                </td>
                                <td>
                                    <span class="badge badge-primary">{{ package.downloads|number_format }}</span>
                                </td>
                                <td style="white-space: nowrap; width: 1px;">
                                    <div class="btn-group">
                                        <a href="{{ path('devliver_package_update', { package: package.id, referer: true }) }}" data-toggle="tooltip" title="{{ 'action.update'|trans }}" class="btn btn-sm btn-outline-info"><span class="fa fa-sync fa-fw"></span></a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {{ knp_pagination_render(pagination) }}
        </div>
        <div class="col-md-6 text-right">
            {{ block('pageActionsGroup') }}
        </div>
    </div>
{% endblock %}
