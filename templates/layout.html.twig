<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="shortcut icon" href="{{ asset('bundles/devliver/images/logo_black.png') }}"/>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}

        {#<link rel="stylesheet" href="{{ asset('bundles/devliver/css/dashboard.css') }}">#}
        {#<link rel="stylesheet" href="{{ asset('bundles/devliver/css/style.css') }}">#}
        {#<link rel="stylesheet" href="{{ asset('bundles/devliver/css/sticky-footer-navbar.css') }}">#}
    {% endblock %}

    <title>{% block title %}Devliver{% endblock %}</title>
</head>
<body>

{% include '_partials/header.html.twig' %}

<div class="container-fluid">
    <div class="row">
        {% include '_partials/sidebar.html.twig' %}

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
            {% block pageHeaderWrapper %}
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mt-3 mb-4 pb-2 border-bottom">

                    {% block pageTitleWrapper %}
                        <h1 class="h2">
                            {% block pageTitle %}
                                {{ pageTitle|default('') }}
                            {% endblock %}
                        </h1>
                    {% endblock %}

                    {% block pageActionsWrapper %}
                        <div class="btn-toolbar mb-2 mb-md-0">
                            {% block pageActionsGroup %}
                                <div class="btn-group">
                                    {% block pageActions %}
                                    {% endblock %}
                                </div>
                            {% endblock %}
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}

            {% spaceless %}
                <div class="content-area flash-messages">
                    {% for type, flashMessages in app.flashes %}
                        {% for flashMessage in flashMessages %}
                            <div class="alert alert-{{ type }}">{{ flashMessage|raw }}</div>
                        {% endfor %}
                    {% endfor %}
                </div>
            {% endspaceless %}

            {% block content %}{% endblock %}

        </main>

        {% include '_partials/footer.html.twig' %}
    </div>
</div>

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/app.js') }}"></script>

    <script type="text/javascript">
        $(function () {
            $('.bs-tooltip').tooltip({
                container: 'body',
                trigger: 'hover'
            });
            $('.bs-confirmation').confirmation({
                rootSelector: '.bs-confirmation',
                popout: true,
                singleton: true,
                title: function () {
                    return $(this).data('confirmation');
                }
            });
        });
    </script>
{% endblock %}

</body>
</html>